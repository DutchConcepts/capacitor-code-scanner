{
  "name": "@capacitor-community/barcode-scanner",
  "version": "2.1.1",
  "description": "A fast and efficient (QR) barcode scanner for Capacitor",
  "main": "dist/plugin.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "CapacitorCommunityBarcodeScanner.podspec"
  ],
  "author": "tafelnl",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DutchConcepts/capacitor-barcode-scanner.git"
  },
  "bugs": {
    "url": "https://github.com/DutchConcepts/capacitor-barcode-scanner/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "docgen": "docgen --api BarcodeScannerPlugin --output-readme API_REFERENCE.md",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- autocorrect --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "postinstall": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^3.0.2",
    "@capacitor/core": "^3.0.2",
    "@capacitor/docgen": "0.0.17",
    "@capacitor/ios": "^3.0.2",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "^1.0.1",
    "@ionic/swiftlint-config": "^1.1.2",
    "eslint": "^7.11.0",
    "husky": "^4.3.0",
    "prettier": "~2.3.0",
    "prettier-plugin-java": "~1.0.2",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.29.0",
    "swiftlint": "^1.0.1",
    "typescript": "~4.1.5"
  },
  "peerDependencies": {
    "@capacitor/core": "^3.0.2"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx pretty-quick --staged"
    }
  },
  "homepage": "https://github.com/DutchConcepts/capacitor-barcode-scanner#readme",
  "directories": {
    "example": "examples"
  },
  "publishConfig": {
    "access": "public"
  }
}
